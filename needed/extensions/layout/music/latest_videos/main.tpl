<section>                  
	<h2 class="font-thin m-b">
		[@title] 
		<span class="musicbar animate inline m-l-sm" style="width:20px;height:20px">
			<span class="bar1 a1 bg-primary lter"></span>
			<span class="bar2 a2 bg-info lt"></span>
			<span class="bar3 a3 bg-success"></span>
			<span class="bar4 a4 bg-warning dk"></span>
			<span class="bar5 a5 bg-danger dker"></span>
		</span>
	</h2>
					
	<div style="position: relative;">
		<a href="#" class="pull-right text-muted m-t-lg " id="load_more_btn" style="position: absolute;top: -50px; right: 15px; margin-top: 0;" data-toggle="class:fa-spin" ><i class="icon-refresh i-lg  inline" id="refresh"></i></a>
		  
		<div id="ajax-load" class="ui four column grid">
			[@content]
		</div>
	</div>

	<div class="clear clearfix clear_all"></div>
</section>
		

